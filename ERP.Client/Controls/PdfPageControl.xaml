<UserControl
    x:Class="ERP.Client.Controls.PdfPageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ERP.Client.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0 0 0 1"
                BorderBrush="Black" x:Name="PdfPageBorder">
            <Image x:Name="PdfPageImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
               Stretch="None"/>
        </Border>
    </Grid>
</UserControl>
